{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": 1,
    "no-empty": 1,
    "no-extra-parens": 1,
    "no-func-assign": 1,
    "no-eval": 2,
    "constructor-super": 2,
    "no-const-assign": 2,
    "no-var": 1
  }
}